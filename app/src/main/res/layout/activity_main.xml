<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=" ¿Cuál es el nombre del artista que canta esta canción?"
        android:textAlignment="center"
        android:textColor="#000000"

        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:gravity="center"
        android:text="Christian Nodal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/PlusButton"
        android:layout_width="81dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_iconmonstr_plus_3" />
    <Button
        android:id="@+id/show_db"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="show db"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/nextbutton"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="208dp"
        android:src="@drawable/ic_iconmonstr_arrow_45" />

</RelativeLayout>